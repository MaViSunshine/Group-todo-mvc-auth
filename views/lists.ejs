<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fjalla+One&family=Open+Sans&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;600&family=Lobster+Two:ital@1&display=swap"
      rel="stylesheet"
    />


		<title>Create Lists</title>
	</head>
	<body>
		<div class="dark-screen">
			<div class="bg"></div>
			<div id="toggle" class="toggle-btn"></div>
			<div id="blender" class="expand"></div>
			<div class="container">
				<div class="main">
					<h2 class="font-secondary">Your Lists</h2>
					<ul>
						<% lists.forEach( el => { %>
						<li class="listItem" data-id="<%=el._id%>">
							<a href="/lists/<%=el._id%>" class="list"><%= el.name %></a>
							<span class="del"> <i class="fa-solid fa-trash-can"></i> </span>
						</li>
						<% }) %>
					</ul>
					<div class="sharedYou">
					<h2 class="font-secondary">Lists Shared With You</h2>

					<% if (sharedLists.length > 0) { %>
					<ul>
						<% sharedLists.forEach( el => { %>
						<li class="listItem" data-id="<%=el._id%>">
							<a href="/lists/<%=el._id%>" class="list"><%= el.name %> (shared by <%= el.userId.userName %>) </a>
						</li>
						<% }) %>
					</ul>
					<% } else { %>
					<p>You haven't been shared a list yet.</p>
					<% } %>
					</div>
					<h2 class="font-secondary">Create a new List</h2>	
					<form action="/lists/createList" method="POST">
						<input type="text" placeholder="Enter list name" name="name" />
						<input type="submit" value="Create" />
					</form>

          <div class="button-container">
            <a href="/logout">Logout</a>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/main.js"></script>
    <script src="/js/darkMode.js"></script>
  </body>
</html>
